<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BarrierControlActivity">

    <ImageView
        android:id="@+id/logoImageBarrier"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_logo_nexoplus"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openBarrierButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Barrier"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logoImageBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/responseText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Response will appear here"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/openBarrierButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout> 